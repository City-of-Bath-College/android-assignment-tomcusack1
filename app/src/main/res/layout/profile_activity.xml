<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#333333"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tomcusack.com.QuestionApp.ProfileActivity">

    <ImageView
        android:id="@+id/top_banner"
        android:src="@drawable/background"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="88dp">

        <ImageView
            android:id="@+id/emojis"
            android:src="@drawable/profile"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="24dp"
            android:gravity="right"
            android:text="Tom Cusack"
            android:textSize="32sp"
            android:textStyle="normal"/>

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/title"
            android:src="@drawable/email"/>

        <TextView
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_email"
            android:layout_alignBottom="@id/icon_email"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_email"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="tom@tom-cusack.com"/>

        <ImageView
            android:id="@+id/icon_site"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_email"
            android:layout_marginTop="20dp"
            android:src="@drawable/website"/>

        <TextView
            android:id="@+id/text_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_site"
            android:layout_alignBottom="@id/icon_site"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_site"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="http://tom-cusack.com"/>

        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_site"
            android:layout_marginTop="20dp"
            android:src="@drawable/twitter"/>

        <TextView
            android:id="@+id/text_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_info"
            android:layout_alignBottom="@id/icon_info"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_info"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text=" @leafy_lane"/>

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_info"
            android:layout_marginTop="20dp"
            android:src="@drawable/location"/>

        <TextView
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_location"
            android:layout_alignBottom="@id/icon_location"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_location"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="Bath, United Kingdom"/>


    </RelativeLayout>


</RelativeLayout>
