<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#dedede"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mhissdev.com.QuestionApp.ProfileActivity">

    <!-- <RelativeLayout
        android:id="@+id/top-background"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="120dp" /> -->

    <!-- Top banner -->
    <ImageView
        android:id="@+id/top_banner"
        android:src="@drawable/background"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:adjustViewBounds="true" />

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="88dp">

        <!-- Emojis -->
        <ImageView
            android:id="@+id/emojis"
            android:src="@drawable/emojis"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        
        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="24dp"
            android:gravity="right"
            android:text="Mark Hiscock"
            android:textSize="32sp"
            android:textStyle="normal"/>

        <!-- Email -->
        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/title"
            android:src="@drawable/img_05"/>

        <TextView
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_email"
            android:layout_alignBottom="@id/icon_email"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_email"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="mark@somecompany.com"/>

        <!-- site -->
        <ImageView
            android:id="@+id/icon_site"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_email"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_03"/>

        <TextView
            android:id="@+id/text_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_site"
            android:layout_alignBottom="@id/icon_site"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_site"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="http://somesite.com"/>

        <!-- Some info -->
        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_site"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_04"/>

        <TextView
            android:id="@+id/text_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_info"
            android:layout_alignBottom="@id/icon_info"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_info"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="mhiscock"/>

        <!-- Location -->
        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_info"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_01"/>

        <TextView
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon_location"
            android:layout_alignBottom="@id/icon_location"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/icon_location"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="Devizes, Wiltshire, UK."/>


    </RelativeLayout>


</RelativeLayout>
