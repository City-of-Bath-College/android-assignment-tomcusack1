<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tomcusack.QuestionApp.IntroductionActivity">

    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/question"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/welcomeMessage"
        android:text="MathsPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_below="@+id/imgPicture"/>

    <TextView
        android:id="@+id/highScoreMessage"
        android:text="High Score:0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/welcomeMessage"/>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/highScoreMessage"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Let's play!"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="#76EE00"/>

    <Button
        android:id="@+id/btnHigh"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnPlay"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="See Top Scores!"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="#f6f6f6"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnHigh"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="About Me!"
        android:textSize="22sp"
        android:padding="10dp"
        android:background="#f6f6f6"/>

</RelativeLayout>
