<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tomcusack.com.QuestionApp.HighScoreActivity">

    <TextView
        android:id="@+id/lblHall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="32sp"
        android:gravity="center_horizontal"
        android:text="HIGH SCORES"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:text="Clear Scores"
        android:textSize="22sp"
        android:padding="10dp"
        android:background="#dd2e4d"/>

    <TextView
        android:id="@+id/lblNoScores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="28sp"
        android:gravity="center"
        android:text="No winners yet. Keep practicing!"/>

</RelativeLayout>
