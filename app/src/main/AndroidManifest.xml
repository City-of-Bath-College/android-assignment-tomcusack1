<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tomcusack.QuestionApp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name="com.tomcusack.QuestionApp.ParseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tomcusack.QuestionApp.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.tomcusack.QuestionApp.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.tomcusack.QuestionApp.IntroductionActivity"
            android:label="@string/title_activity_introduction" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tomcusack.QuestionApp.HighScoreActivity"
            android:label="@string/title_activity_high_score" >
        </activity>
    </application>

</manifest>
